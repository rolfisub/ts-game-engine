{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "rootDirs": ["./src"],
        "baseUrl": "./src"
    },
    "include": ["./src"],
    "exclude": ["./node_modules", "./build"]
}
